## Importing movie dataset .dat
dfmovies = pd.read_csv(
    'C:/Users/Jonathan Jie/My Python Stuff/movies.dat',
    delimiter='::',
    header=None,
    names=['MovieID', 'Title', 'Genres'],
    engine='python',
    encoding='ISO-8859-1'
)

